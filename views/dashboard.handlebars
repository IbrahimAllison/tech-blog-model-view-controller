<main class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">Tech Dashboard</h1>
      <a href="/newBlogPost" class="btn text-dark" style="background-color: #FFFFFF;">Create a New Tech Blog Post</a>
    </div>
  </div>
  <br>
  <h1 class="mb-4">Tech Trends Blog Contributions:</h1>
  {{#each blogPosts}}
    <div class="post-container post mb-3">
      <h2><a href="/post/{{id}}" class="text-decoration-none text-reset">{{title}}</a></h2>
      <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
      <a href="/edit-post/{{id}}" class="btn text-dark" style="background-color: #FFFFFF;">Edit Post</a>
      <button class="btn delete-post" style="background-color: #FFFFFF;" data-post-id="{{id}}">Delete</button>
    </div>
  {{/each}}
</main>